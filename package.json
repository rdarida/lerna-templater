{
  "name": "lerna-templater",
  "version": "1.4.3",
  "description": "Generates package from template for a Lerna Monorepo Project",
  "keywords": [
    "lerna",
    "package",
    "generator",
    "template"
  ],
  "license": "MIT",
  "author": "RÃ³bert Darida",
  "homepage": "https://rdarida.github.io/lerna-templater",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdarida/lerna-templater.git"
  },
  "bugs": {
    "url": "https://github.com/rdarida/lerna-templater/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/cli.js",
  "files": [
    "./dist"
  ],
  "scripts": {
    "clean": "rimraf ./coverage ./dist ./docs",
    "prettier": "prettier . --check",
    "pretest": "rimraf ./coverage",
    "test": "jest",
    "prebuild": "rimraf ./dist",
    "build": "tsc",
    "predocs": "rimraf ./docs",
    "docs": "typedoc --out ./docs --exclude \"./src/cli.ts\" ./src",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin main",
    "prestart": "npm run build",
    "start": "node ./dist/cli.js --help"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.5",
    "fs-extra": "^11.2.0",
    "mustache": "^4.2.0",
    "rimraf": "^6.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/yargs": "^17.0.33",
    "jest": "^29.7.0",
    "jest-config": "^29.7.0",
    "prettier": "^3.4.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3"
  }
}
