{
  "name": "lerna-templater",
  "version": "1.4.19",
  "description": "Generates package from template for a Lerna Monorepo Project",
  "keywords": [
    "lerna",
    "package",
    "generator",
    "template"
  ],
  "license": "MIT",
  "author": "RÃ³bert Darida",
  "homepage": "https://rdarida.github.io/lerna-templater",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdarida/lerna-templater.git"
  },
  "bugs": {
    "url": "https://github.com/rdarida/lerna-templater/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/cli.js",
  "files": [
    "./dist"
  ],
  "scripts": {
    "lint": "tsc",
    "prettier": "prettier . --check",
    "pretest": "rimraf ./coverage",
    "test": "jest",
    "prebuild": "rimraf ./dist",
    "build": "tsup ./src/index.ts ./src/cli.ts --format cjs --dts --minify",
    "prepublishOnly": "npm run build",
    "release": "release-it",
    "predocs": "rimraf ./docs",
    "docs": "typedoc"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.5",
    "fs-extra": "^11.2.0",
    "mustache": "^4.2.0",
    "rimraf": "^6.1.2",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "@types/yargs": "^17.0.33",
    "jest": "^30.2.0",
    "jest-config": "^30.2.0",
    "prettier": "^3.4.2",
    "release-it": "^19.0.6",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typedoc": "^0.28.1",
    "typescript": "^5.7.3"
  }
}
